// tsconfig.node.json をこう修正！
{
  "compilerOptions": {
    "composite": true,       // ✅ 必須
    "noEmit": false,         // ✅ emit禁止を解除（これがないとダメ）
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts"]
}